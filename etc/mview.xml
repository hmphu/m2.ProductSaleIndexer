<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:framework:Mview/etc/mview.xsd">
	<!--
	subscriptions catalog_product_sale
	-->		
    <view id="catalog_product_sale" class="Faonni\ProductSaleIndexer\Model\Indexer\Product\SaleIndexer" group="indexer">
        <subscriptions>
            <table name="catalog_product_entity" entity_column="entity_id" />
            <table name="catalog_product_entity_datetime" entity_column="entity_id" />
            <table name="catalog_product_entity_decimal" entity_column="entity_id" />
            <table name="catalog_product_entity_int" entity_column="entity_id" />
        </subscriptions>
    </view>
</config>
